{
  "name": "adp-search-indexer",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build:clean": "rm -rf dist && tsup",
    "export": "node dist/index.js --export",
    "index": "node dist/index.js --index",
    "analyze": "node dist/index.js --test-console --verbose",
    "index:partial": "node dist/index.js --index --partial --verbose",
    "index:full": "node dist/index.js --index --no-partial --verbose",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "check": "npm run typecheck && npm run lint",
    "test": "node --test",
    "cleanup": "rm -rf indexed-content"
  },
  "dependencies": {
    "@algolia/client-search": "^5.20.3",
    "@mozilla/readability": "^0.5.0",
    "@types/minimist": "^1.2.5",
    "algoliasearch": "^4.22.1",
    "chalk": "^5.4.1",
    "cheerio": "1.0.0-rc.12",
    "fast-xml-parser": "^4.3.2",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.23.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^48.11.0",
    "eslint-plugin-promise": "^6.6.0",
    "globals": "^16.0.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "tsup": "^8.4.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.29.0"
  },
  "engines": {
    "node": "22.6.0"
  }
}
