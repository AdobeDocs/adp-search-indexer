{
  "name": "adp-search-indexer",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "build": "tsup",
    "dist": "rm -rf dist && tsup",
    "export": "node dist/index.js --export",
    "index": "node dist/index.js --index",
    "verify": "node dist/cli/verify.js",
    "analyze": "node dist/index.js --test-console --verbose",
    "partial-update": "node dist/index.js --index --partial --verbose",
    "force-update": "node dist/index.js --index --force --verbose",
    "full-reindex": "node dist/index.js --index --no-partial --verbose",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "cleanup": "rm -rf indexed-content"
  },
  "dependencies": {
    "@algolia/client-search": "^5.20.3",
    "@mozilla/readability": "^0.5.0",
    "@types/minimist": "^1.2.5",
    "algoliasearch": "^4.22.1",
    "cheerio": "1.0.0-rc.12",
    "fast-xml-parser": "^4.3.2",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20.11.19",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "tsup": "^8.4.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "22.6.0"
  }
}
